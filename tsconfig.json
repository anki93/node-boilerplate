{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "outDir": "dist",
    // "rootDir": "src",
    "noImplicitAny": true,
    "strict": true,
    // "noUnusedLocals": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "skipLibCheck": true,
    // "typeRoots": ["node_modules/@types"]
    "types": ["types/**/*.ts"]
  },
  "lib": ["es2015"]
}
