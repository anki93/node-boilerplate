{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "strict": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "paths": {
      "@core/*": ["./core/*"],
      "@config/*": ["./config/*"],
      "@user/*": ["./user/*"]
    }
  },
  "lib": ["es2015"]
}
